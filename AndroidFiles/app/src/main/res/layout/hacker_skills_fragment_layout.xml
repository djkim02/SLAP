<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <CheckBox android:id="@+id/checkbox_cpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hacker_skills_cpp"
        android:onClick="onCheckboxClicked"/>

    <CheckBox android:id="@+id/checkbox_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hacker_skills_java"
        android:onClick="onCheckboxClicked"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hacker_skills_button_text"
        android:drawableLeft="@drawable/facebook_login"
        android:onClick="onSubmitButtonClicked"/>
</LinearLayout>