<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/group_details_item_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:padding="16dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_details_item_thumbnail_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/com_facebook_profile_picture_blank_square" />
                <TextView
                    android:id="@+id/group_detail_item_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:text="Joe Smith"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/group_details_item_thumbnail_image_view"
                    android:layout_toEndOf="@+id/group_details_item_thumbnail_image_view"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>